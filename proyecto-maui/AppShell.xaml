<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="proyecto_maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:proyecto_maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="proyecto_maui">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{AppThemeBinding Light='icon_notes.png', Dark='icon_notes_dark.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{AppThemeBinding Light='icon_about.png', Dark='icon_about_dark.png'}" />
    </TabBar>

</Shell>
